<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.jiangtao.freedomblog">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.READ_CONTACTS"/>
  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  <uses-permission android:name="android.permission.RECEIVE_SMS"/>
  <uses-permission android:name="android.permission.GET_TASKS"/>
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
  <uses-permission android:name="android.permission.RECORD_AUDIO"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>

  <application
      android:name="org.jiangtao.application.BlogApplication"
      android:allowBackup="true"
      android:hardwareAccelerated="true"
      android:icon="@mipmap/ic_launcher"
      android:largeHeap="true"
      android:theme="@style/AppTheme">
    <activity
        android:name=".ActivityWelcome"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".ActivityIndex"
        android:label="@string/index_actionbar"
        android:launchMode="singleInstance"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name=".ActivityGuide"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name=".ActivityLogin"
        android:label="@string/button_login"/>
    <activity
        android:name=".ActivityRegister"
        android:label="@string/register_blog">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value=".ActivityLogin"/>
    </activity>
    <activity
        android:name=".ActivityRetrieve"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name=".SettingsActivity"
        android:label="@string/title_activity_settings">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value=".ActivityIndex"/>
    </activity>
    <activity
        android:name=".UserSettingsActivity"
        android:label="@string/title_activity_user_settings"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name=".UserIndexActivity"
        android:label="@string/title_activity_user_index"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name=".Sortctivity"
        android:label="@string/title_activity_sortctivity"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name=".AboutActivity"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:label="@string/title_activity_about"
        android:theme="@style/FullscreenTheme"/>
    <activity
        android:name=".PersonAttentionActivity"
        android:theme="@style/AppTheme.NoActionBar"/>

    <!-- 有关第三方 -->
    <activity
        android:name="com.mob.tools.MobUIShell"
        android:configChanges="keyboardHidden|orientation|screenSize"
        android:theme="@android:style/Theme.Translucent.NoTitleBar"
        android:windowSoftInputMode="stateHidden|adjustResize"/>

    <activity
        android:name=".PublishActivity"
        android:label="@string/label_publish">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value=".ActivityIndex"/>
    </activity>
  </application>

</manifest>
