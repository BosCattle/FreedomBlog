<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="org.jiangtao.freedomblog.ActivityLogin"
    android:background="@color/colorPrimary"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/view"/>

  <include
      android:layout_below="@+id/view"
      layout="@layout/sublayout_login_edittext"
      android:id="@+id/sublayout_login_edittext"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <include
      layout="@layout/sublayout_login_other"
      android:id="@+id/sublayout_login_other"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/sublayout_login_edittext"
      android:layout_marginTop="@dimen/activity_vertical_margin1"
      />

</RelativeLayout>
