<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.jiangtao.freedomblog.ActivityRegister">

    <ImageView
        android:id="@+id/register_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sub_edittext_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_imageview"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/register_edittext_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/input_type"
            android:hint="@string/register_edittext_username"
            android:maxLength="48"
            android:saveEnabled="false" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sub_edittext_email_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_edittext_username"

        app:errorEnabled="true">

        <EditText
            android:id="@+id/edittext_email_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edittext_email_phonenumber"
            android:inputType="textPassword"
            android:maxLength="48"
            android:saveEnabled="false" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sub_edittext_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_edittext_email_phonenumber"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/edittext_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sub_edittext_password"
            android:inputType="textPassword"
            android:maxLength="48"
            android:saveEnabled="false" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_edittext_register_password"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimary"
        android:text="@string/button_register"
        android:textColor="@color/white" />

</RelativeLayout>
