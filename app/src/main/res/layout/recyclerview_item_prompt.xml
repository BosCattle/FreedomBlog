<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/recyclerview_horizontal_space"
    android:paddingTop="@dimen/recyclerview_horizontal_space"
    android:paddingBottom="@dimen/recyclerview_horizontal_space"
    >


  <ImageView
      android:id="@+id/icon_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:src="@drawable/ic_favorite_red_a700_36dp"
      />

  <TextView
      android:id="@+id/textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/recyclerview_horizontal_space"
      android:layout_marginStart="@dimen/recyclerview_horizontal_space"
      android:layout_toEndOf="@+id/icon_image"
      android:layout_toRightOf="@+id/icon_image"
      android:text="你好"
      android:textSize="@dimen/user_name"
      />

  <ImageView
      android:id="@+id/icon_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:src="@drawable/ic_favorite_red_a700_36dp"
      />
</RelativeLayout>