<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sublayout_person_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/index_image_shape"
    >

    <TextView
        android:textSize="@dimen/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_favorite_outline_blue_24dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:text="@string/group_love"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:textSize="@dimen/user_name"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/group_num"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_blue_grey_800_24dp"
        />

</RelativeLayout>